<div class="login">
<h1>Welcome back! Please log in below.</h1>

<% if flash[:errors] %>
  <% flash[:errors].each do |e| %>
    <p style="color: red;"><%= e %></p>
  <% end %>
<% end %>

<%= form_tag sessions_path do %>
  <%= label_tag :username %>
  <%= text_field_tag :username %>
  <%= label_tag :password %>
  <%= password_field_tag :password %>
  <%= submit_tag "Log In" %>
<% end %>
</div>
