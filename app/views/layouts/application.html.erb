<!DOCTYPE html>
<html>
  <head>
    <title>Bookbuddy</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="header">
    <% if flash[:authorized] %>
      <p style="color: red;"><%= flash[:authorized] %></p>
    <% end %>
    <% if logged_in? %>
     <%= link_to "Log Out", logout_path, method: 'post' %> | <%= link_to "See all books", books_path %> | <%= link_to "Your page", user_path(current_user) %>
    <% else %>
      <%= link_to "Log In", login_path %>
    <% end %>
    <%= yield %>
  </body>
</html>
